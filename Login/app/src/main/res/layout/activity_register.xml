<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="15dp"
    android:fillViewport="true"
    android:background="@drawable/bg2"
    tools:context=".RegisterActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Daftar Akun"
            android:layout_margin="30dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:textColor="@color/black"
            android:layout_marginBottom="5dp"
            android:text="Username" />

        <EditText
            android:paddingStart="10dp"
            android:textColor="@color/black"
            android:drawablePadding="5dp"
            android:drawableTint="@color/black"
            android:textColorHint="@color/black"
            android:drawableLeft="@drawable/ic_profil"
            android:id="@+id/edtUsername"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:hint="Masukkan Username"
            android:inputType="text"/>

        <TextView
            android:id="@+id/textView3"
            android:textColor="@color/black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="5dp"
            android:text="Password" />

        <EditText
            android:paddingStart="10dp"
            android:drawablePadding="5dp"
            android:drawableLeft="@drawable/ic_baseline_vpn_key_24"
            android:id="@+id/edtPassword"
            android:drawableTint="@color/black"
            android:textColorHint="@color/black"
            android:textColor="@color/black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:hint="Masukkan Password"
            android:inputType="textPassword"/>

        <TextView
            android:id="@+id/textView4"
            android:textColor="@color/black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="5dp"
            android:text="Nama" />

        <EditText
            android:paddingStart="10dp"
            android:drawablePadding="5dp"
            android:drawableLeft="@drawable/ic_baseline_person_24"
            android:id="@+id/edtNama"
            android:drawableTint="@color/black"
            android:textColorHint="@color/black"
            android:textColor="@color/black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:hint="Masukkan Nama"
            android:inputType="text"/>

        <TextView
            android:id="@+id/textView5"
            android:textColor="@color/black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="5dp"
            android:text="Jenis Kelamin" />

        <RadioGroup
            android:id="@+id/radioJk"
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RadioButton
                android:id="@+id/radioL"
                android:layout_marginBottom="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="L" />

            <RadioButton
                android:id="@+id/radioP"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="P" />

        </RadioGroup>

        <TextView
            android:id="@+id/textView6"
            android:textColor="@color/black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="5dp"
            android:text="Alamat" />

        <EditText
            android:id="@+id/edtAlamat"
            android:paddingStart="10dp"
            android:drawablePadding="5dp"
            android:drawableTint="@color/black"
            android:textColorHint="@color/black"
            android:textColor="@color/black"
            android:drawableLeft="@drawable/ic_alamat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:hint="Masukkan Alamat"
            android:inputType="text"
            android:textAlignment="inherit"/>

        <TextView
            android:id="@+id/textView7"
            android:textColor="@color/black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="5dp"
            android:text="Nomor Hp" />

        <EditText
            android:paddingStart="10dp"
            android:drawablePadding="5dp"
            android:drawableTint="@color/black"
            android:textColorHint="@color/black"
            android:textColor="@color/black"
            android:drawableLeft="@drawable/ic_no_hp"
            android:id="@+id/edtNo_hp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:hint="Masukkan Nomor Hp"
            android:inputType="number" />

        <TextView
            android:id="@+id/textView8"
            android:textColor="@color/black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="5dp"
            android:text="Email" />

        <EditText
            android:paddingStart="10dp"
            android:drawablePadding="5dp"
            android:drawableLeft="@drawable/ic_baseline_email_24"
            android:id="@+id/edtEmail"
            android:drawableTint="@color/black"
            android:textColorHint="@color/black"
            android:textColor="@color/black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:hint="Masukkan Email"
            android:inputType="textEmailAddress" />

        <Button
            android:id="@+id/btnDaftar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="DAFTAR"
            android:layout_marginBottom="10dp"
            android:textColor="@color/cardview_light_background"
            android:layout_margin="30dp"
            android:backgroundTint="@color/colorPrimary"/>

        <TextView
            android:id="@+id/tv_sudah_punya_akun"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="Sudah punya akun? Login disini."
            app:layout_constraintStart_toStartOf="@+id/btnDaftar"
            app:layout_constraintTop_toBottomOf="@+id/btnDaftar" />

    </LinearLayout>

</ScrollView>